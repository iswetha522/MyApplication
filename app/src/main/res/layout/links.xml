<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white" >

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/wiki_image_view"
                android:layout_width="132dp"
                android:layout_height="104dp"
                android:layout_alignLeft="@+id/yahoo_image_view"
                android:layout_alignStart="@+id/yahoo_image_view"
                android:layout_below="@+id/gmail_image_view"
                android:scaleType="fitXY"
                android:src="@drawable/wikilogo"/>

            <ImageView
                android:id="@+id/gmail_image_view"
                android:layout_width="174dp"
                android:layout_height="130dp"
                android:layout_below="@+id/yahoo_image_view"
                android:paddingLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/gmlogo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/yahoo_image_view"
                android:layout_width="139dp"
                android:layout_height="139dp"
                android:layout_alignEnd="@+id/gmail_image_view"
                android:layout_alignRight="@+id/gmail_image_view"
                android:layout_below="@+id/google_image_view"
                android:scaleType="fitXY"
                android:src="@drawable/ylogo" />

            <ImageView
                android:id="@+id/google_image_view"
                android:layout_width="201dp"
                android:layout_height="109dp"
                android:scaleType="fitXY"
                android:src="@drawable/glogo1"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/yahoo_image_view"
                android:layout_alignStart="@+id/yahoo_image_view"
                android:layout_alignRight="@+id/wiki_image_view"
                android:layout_alignEnd="@+id/wiki_image_view" />

            <TextView
                android:id="@+id/infoTxtGmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/gmail_image_view"
                android:layout_gravity="right"
                android:layout_marginBottom="49dp"
                android:layout_toEndOf="@+id/google_image_view"
                android:layout_toRightOf="@+id/google_image_view"
                android:autoLink="all"
                android:linksClickable="true"
                android:text="@string/txtGmail"
                android:textSize="25sp"></TextView>

            <TextView
                android:id="@+id/infoTxtWiki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/wiki_image_view"
                android:layout_alignLeft="@+id/infoTxtGmail"
                android:layout_alignStart="@+id/infoTxtGmail"
                android:layout_marginBottom="32dp"
                android:autoLink="all"
                android:linksClickable="true"
                android:text="@string/txtWiki"
                android:textSize="25sp"></TextView>

            <TextView
                android:id="@+id/infoTxtYahoo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="51dp"
                android:autoLink="all"
                android:linksClickable="true"
                android:text="@string/txtYahoo"
                android:textSize="25sp"
                android:layout_alignBottom="@+id/yahoo_image_view"
                android:layout_alignLeft="@+id/infoTxtGmail"
                android:layout_alignStart="@+id/infoTxtGmail"></TextView>

            <TextView
                android:id="@+id/infoTxtGoogle"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignBottom="@+id/google_image_view"
                android:layout_alignLeft="@+id/infoTxtYahoo"
                android:layout_alignStart="@+id/infoTxtYahoo"
                android:layout_marginBottom="32dp"
                android:autoLink="all"
                android:gravity="left"
                android:linksClickable="true"
                android:text="@string/txtGoogle"
                android:textSize="25sp"></TextView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>